#!/bin/bash

# This script is intended to run AFTER the window manager has initialized.

if [ ! -e $HOME/.xsession-init-guard ]; then
    xcape -e "$(cat $HOME/.config/xcape/xcaperc)"
    nitrogen --restore
    update-rofi-config
    if (( ! NO_FCITX )); then
        fcitx5 -d
    fi
    picom --config $HOME/.config/compton/compton.conf --experimental-backend&
    cbatticon -n BAT0 &
    pasystray --notify=all &
    blueman-applet &
    # wicd-gtk -t &
    nm-applet &
    # synapse -s &
    # plank &
    xset b off
fi

touch $HOME/.xsession-init-guard
