#!/bin/bash

# This script is intended to run AFTER the window manager has initialized.

if [ ! -e $HOME/.xsession-init-guard ]; then
    xcape -e 'Super_L=Super_L|F12;Super_R=Super_R|F12;Control_L=Shift_L|Super_L|F12'
    nitrogen --restore
    update-rofi-config
    fcitx
    compton --config $HOME/.config/compton/compton.conf &
    cbatticon -n &
    pasystray --notify=all &
    blueman-applet &
    # wicd-gtk -t &
    nm-applet &
    # synapse -s &
    # plank &
fi

touch $HOME/.xsession-init-guard
